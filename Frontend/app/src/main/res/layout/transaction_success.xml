<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="22dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="22dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:src="@drawable/transaction_success"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/transaction_success_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Success"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for purchasing. Your order will be shipped within 3-5 business days"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/transactionSuccess"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:text="Back to Home"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:paddingVertical="8dp"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>